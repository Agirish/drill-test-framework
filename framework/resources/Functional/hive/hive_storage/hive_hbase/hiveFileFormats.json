{
    "testId": "hive_hbase",
    "type": "group",
    "description": "Test hive tables backed by hbase",
    "categories": [
        "smoke"
    ],
    "dependencies" : ["hive","hbase"],
    "matrices": [
        {
            "query-file": ".*.sql",
            "schema": "hive",
            "output-format": "tsv",
            "expected-file": ".*.e",
            "verification-type": [
                "in-memory"
            ]
        }
    ],
    "datasources": [
    {
       "mode": "cp",
       "src": "Datasources/hive_storage/voter.txt",
       "dest": "hive_storage/voter_txt/voter.txt"
    },
    {
       "mode": "cp",
       "src": "Datasources/hive_storage/student.txt",
       "dest": "hive_storage/student_txt/student.txt"
    },
    {
       "mode": "cp",
       "src": "Datasources/hive_storage/hbase/votertab",
       "dest": "hive_storage/votertab"
    },
    {
       "mode": "gen",
       "src": "Datasources/hive_storage/hbase/hbase.sh",
       "dest": ""
    },
    {
       "mode": "gen",
       "src": "bin/execHive.sh resources/Datasources/hive_storage/hive_hbase.q",
       "dest": ""
    }
   ]
}
